@{
    ViewData["Title"] = "Contact Us";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Contact" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Full Name:</label>
        <input type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input type="email" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        <label>What do you need help with?</label>
        <input type="radio" name="reasonOfContact" /> Financial Advice
        <input type="radio" name="reasonOfContact" /> Budgeting Advice
        <input type="radio" name="reasonOfContact" /> Website Help
    </div>
    <br />

    <div class="form-group">
        <label>Tell us what you are struggling with:</label>
        <p>
            <textarea name="addInfo" id="addInfo" rows="8" cols="64"></textarea>
        </p>
    </div>
    <br />

    <div class="form-group">
        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
        <button type="reset" value="Reset" class="btn btn-secondary">Reset</button>
    </div>
</form>
