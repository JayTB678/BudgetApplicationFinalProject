@{
    ViewData["Title"] = "Bank Account Info";
}
<div class="container px-4">
    <h2 class="text-center">Bank account info</h2>
    <div class="container overflow-hidden">
        <div class="row gx-5 justify-content-center">
            <div class="col-3">
                <div class="p-1 col-6 border bg-light mb-2">Weekly Income</div>
                <input class="p-3 border bg-light mb-4 text-center" value="000.00" />

                <div class="p-1 col-6 border bg-light mb-2">Ammount Saved</div>
                <input class="p-3 border bg-light mb-4 text-center" value="000.00" />

                <div class="p-1 col-6 border bg-light mb-2">Add Money</div>
                <input class="p-3 border bg-light mb-4 text-center" value="000.00" />

                <div class="d-flex gap-2">
                    <button type="submit" style="margin-top: -15px;" class="btn border bg-light mb-2">Add</button>
                    <button type="submit" style="margin-top: -15px;" class="btn border bg-light mb-2">Cancel</button>
                </div>

            </div>

            <!-- New section to appear to the right -->
            <div class="col-3">
                <div class="p-1 col-12 border bg-light mb-2">Recent Transactions</div>

                <div class="col-12">
                    <div class="scroll-box" style="max-height: 300px; overflow-y: scroll;">
                        <div class="p-1 col-11 border bg-light mb-2">Transaction #7</div>
                        <div class="p-3 col-11 border mb-4 text-center text-success">+ $800</div>

                        <div class="p-1 col-11 border bg-light mb-2">Transaction #6</div>
                        <div class="p-3 col-11 border mb-4 text-center text-danger">- $200</div>

                        <div class="p-1 col-11 border bg-light mb-2">Transaction #5</div>
                        <div class="p-3 col-11 border mb-4 text-center text-success">+ $300</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
