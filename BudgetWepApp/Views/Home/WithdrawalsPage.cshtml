@{
    ViewData["Title"] = "Withdrawals Page";
}
<div class="container px-4">
    <h2 class="text-center">Withdraws</h2>
    <div class="container overflow-hidden">
        <div class="row justify-content-center">
            <div class="col-3">
                <div class="p-1 col-6 border bg-light mb-2" style="margin-top: 20px;">Make Payment</div>
                <input class="p-3 border bg-light mb-4 text-center" value="1000.00" />

                <div class="d-flex gap-2" style="margin-top: -5px; text-align: left;">
                    <input class="form-check-input" type="checkbox" id="flexCheck">
                    <label class="form-check-label" for="flexCheck">reacuring?</label>
                </div>

                <div class="d-flex gap-2" style="margin-top: 15px; text-align: left;">
                    <button type="submit" class="btn border bg-light mb-2">Pay</button>
                    <button type="submit" class="btn border bg-light mb-2">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
